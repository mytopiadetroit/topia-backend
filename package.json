    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3"
  },
  "dependencies": {
    "22": "^0.0.0",
    "@aws-sdk/client-s3": "^3.782.0",
    "@aws-sdk/s3-request-presigner": "^3.782.0",
    "aws-sdk": "^2.1692.0",
    "bcryptjs": "^3.0.2",
    "busboy": "^1.6.0",
